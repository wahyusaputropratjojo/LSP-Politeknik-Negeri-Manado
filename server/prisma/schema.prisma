// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @map("id_user")
  email     String   @unique @map("email")
  password  String   @map("password")
  role      Role     @default(Peserta) @map("role")
  profil    Profil?
  auth      Auth[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}

model Profil {
  id        String   @id @default(uuid()) @map("id_profil")
  nama      String   @map("nama")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @unique @map("id_user")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("profil")
}

model Auth {
  id     String @id @default(uuid()) @map("id_jwt")
  token  String @map("token") @db.Text
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @map("id_user")

  @@map("auth")
}

enum Role {
  Peserta
  Asesor
  Administrator
}
